#! /bin/bash

dir=$( cd "$( dirname "$0" )" && cd ../../../ && pwd )
date=`date +%y%m%d-%H%M`

dev=$(sqlite3 $dir/dbf/nettemp.db  "SELECT dev FROM usb WHERE device='SDM120'"|sed 's/\/dev\///g')
if [[ "$dev" != "none" ]]; then
echo SDM120 ON

skey=$(sqlite3 $dir/dbf/nettemp.db "select server_key from settings WHERE id='1'")

#val=$(/usr/local/bin/sdm120c /dev/$dev -p |head -1|awk '{print $2}' |sed 's/-//g')
val=$(/usr/local/bin/sdm120c /dev/$dev -p |head -1|awk '{print $2}')
php-cgi -f $dir/receiver.php key=$skey usb=$dev device=usb value=$val type=watt current=$val

val=$(/usr/local/bin/sdm120c /dev/$dev -v |head -1|awk '{print $2}' |sed 's/-//g')
php-cgi -f $dir/receiver.php key=$skey usb=$dev device=usb value=$val type=volt current=$val

val=$(/usr/local/bin/sdm120c /dev/$dev -c |head -1|awk '{print $2}' |sed 's/-//g')
php-cgi -f $dir/receiver.php key=$skey usb=$dev device=usb value=$val type=amps current=$val


cur=$(/usr/local/bin/sdm120c /dev/$dev -i |head -1|awk '{print $4/1000}')
all=$(/usr/local/bin/sdm120c /dev/$dev -t |head -1|awk '{print $4}')

#last=$(sqlite3 $dir/db/usb_$dev\_elec.sql "SELECT last FROM def ORDER BY last DESC LIMIT 1")
last=$(sqlite3 $dir/dbf/nettemp.db "SELECT sum FROM sensors WHERE rom='usb_$dev\_elec'")

echo $start
if [[ ! -n "$last" ]]; then
    val=0
    last=0
    sqlite3 $dir/dbf/nettemp.db "UPDATE sensors SET sum='$all' WHERE rom='usb_$(echo $dev)_elec'"
else
    val1=$(echo $all - $last |bc)
    #echo $val1
    val=$(echo $val1 | awk '{print $1/1000}')
    #echo $val
    sqlite3 $dir/dbf/nettemp.db "UPDATE sensors SET sum='$all' WHERE rom='usb_$(echo $dev)_elec'"
fi
echo "LAST $last"
echo "VAL $val"
echo "CUR $cur"
echo "ALL $all"
php-cgi -f $dir/receiver.php key=$skey usb=$dev device=usb value=$val type=elec current=$cur

else
    echo SDM120 OFF
fi




