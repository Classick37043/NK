#! /bin/bash 

dir=$(cd "$( dirname "$0" )" && cat ../../conf.php |grep global | awk -F"'" '{ print $2 }')
#i2cdetect -y 0 |sed '1d'|awk '{ $1=""; print $0 }' |grep -o '[0-9]*'

i2c=$(echo "-- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- 20 -- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- -- -- -- -- -- -- 27 -- -- -- -- -- -- --
 -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- --
 -- -- -- -- -- -- -- 77" |grep -o '[0-9]*')

for i in $i2c; do
echo i2c_$i >> $dir/tmp/onewire
done



